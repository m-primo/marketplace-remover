{
    "manifest_version": 2,
    "name": "Facebook Marketplace Remover",
    "description": "This extension will remove the annoying Facebook Marketplace automatically on detect.",
    "version": "1.0",
    "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "ui.html"
    },
    "content_scripts": [{
        "matches": ["https://www.facebook.com/*"],
        "js": ["remover.js"]
    }],
    "permissions": [
        "activeTab"
    ]
}
